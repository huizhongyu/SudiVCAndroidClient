<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <android.support.constraint.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:background="@color/color_CC0A0026"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">



    <View
        android:id="@+id/divide"
        android:layout_width="0.5mm"
        android:layout_height="match_parent"
        android:background="@color/color_666b7d"
        android:layout_marginRight="20mm"
        app:layout_constraintRight_toLeftOf="@id/btn_comfirm"
        app:layout_constraintTop_toTopOf="parent"
        />

    <Button
        android:id="@+id/btn_comfirm"
        android:layout_width="75mm"
        android:layout_height="28mm"
        android:layout_marginRight="20mm"
        android:background="@drawable/bg_selector_popup_comfirm"
        android:layout_marginTop="100mm"
        android:gravity="center"
        android:text="允许"
        android:textColor="@color/white"
        android:visibility="visible"
        android:textSize="@dimen/sp_14"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn_cancel"
        android:layout_width="75mm"
        android:layout_height="28mm"
        android:layout_marginTop="10mm"
        android:background="@drawable/bg_selector_w2_lc00ffff"
        android:gravity="center"
        android:text="取消"
        android:textColor="@color/white"
        android:textSize="@dimen/sp_14"
        app:layout_constraintLeft_toLeftOf="@id/btn_comfirm"
        app:layout_constraintRight_toRightOf="@id/btn_comfirm"
        app:layout_constraintTop_toBottomOf="@id/btn_comfirm" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/rcv_list"
            android:layout_width="276mm"
            android:layout_height="match_parent"
            android:layout_marginTop="60mm"
            android:paddingLeft="1mm"
            android:paddingRight="1mm"
            android:layout_marginRight="10mm"
            app:layout_constraintRight_toLeftOf="@id/divide"
            app:layout_constraintTop_toTopOf="parent" />

    </android.support.constraint.ConstraintLayout>

</android.support.constraint.ConstraintLayout>