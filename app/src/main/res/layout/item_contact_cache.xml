<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/constaint_item_device"
    android:layout_width="match_parent"
    android:layout_height="30mm"
    android:focusable="true"
    android:background="@drawable/bg_selector_item_contact"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/tv_state"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="45mm"
        android:textColor="@color/white"
        android:textSize="6mm"
        android:paddingLeft="5mm"
        android:paddingRight="5mm"
        android:paddingTop="1mm"
        android:paddingBottom="1mm"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        />

    <ImageView
        android:id="@+id/iv_icon"
        android:layout_width="10mm"
        android:layout_height="10mm"
        android:src="@drawable/icon_device"
        android:layout_marginLeft="3mm"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@id/tv_state"/>

    <TextView
        android:id="@+id/tv_title_device"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="4mm"
        android:text="test"
        android:textColor="@color/color_0A0026"
        android:textSize="10sp"
        android:singleLine="true"
        android:gravity="left"
        app:layout_constraintLeft_toRightOf="@id/iv_icon"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        />




    <View
        android:layout_width="0dp"
        android:layout_height="0.5mm"
        android:background="@color/color_cac0dd"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        />


</android.support.constraint.ConstraintLayout>