<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:background="@color/color_CC0A0026">

    <LinearLayout
        android:layout_marginLeft="@dimen/dimens_34mm"
        android:layout_marginRight="@dimen/dimens_34mm"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/maininterface_menu_icon_nobody"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimens_30mm"
            android:orientation="vertical">

            <TextView
                android:id="@+id/meeting_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="@dimen/dimens_11mm"
                tools:text="会议会场：杭州速递科技会场" />

            <TextView
                android:id="@+id/meeting_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4mm"
                android:textColor="@color/white"
                android:textSize="10sp"
                tools:text="会议ID：GEEDOW-sdkj1213" />

        </LinearLayout>

        <top.androidman.SuperButton
            android:id="@+id/sb_top"
            android:layout_width="50mm"
            android:layout_height="25mm"
            android:layout_marginTop="@dimen/dimens_30mm"
            android:gravity="center"
            app:color_normal="@color/color_687DF4"
            app:corner="12mm"
            app:text="主持人"
            app:textColor="@color/white"
            app:textSize="11sp" />


    </LinearLayout>

</android.support.constraint.ConstraintLayout>