<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="230mm"
    android:layout_height="76mm">

    <android.support.constraint.ConstraintLayout
        android:id="@+id/cl_tab"
        android:layout_width="230mm"
        android:layout_height="76mm"
        android:background="@drawable/maininterface_tab_bg">


        <TextView
            android:id="@+id/tv_role"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8mm"
            android:layout_marginRight="15mm"
            android:text="参会者"
            android:textColor="@color/color_19EDF0"
            android:textSize="12mm"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <View
            android:layout_width="128mm"
            android:layout_height="1mm"
            android:layout_marginRight="5mm"
            android:background="@color/color_19EDF0"
            app:layout_constraintBottom_toBottomOf="@+id/tv_role"
            app:layout_constraintRight_toLeftOf="@+id/tv_role"
            app:layout_constraintTop_toTopOf="@+id/tv_role" />

        <TextView
            android:id="@+id/tv_position"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8mm"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="参会者"
            android:textColor="@color/white"
            android:textSize="12mm"
            app:layout_constraintBottom_toBottomOf="@+id/tv_name"
            app:layout_constraintLeft_toRightOf="@+id/tv_name"
            app:layout_constraintTop_toTopOf="@+id/tv_name" />

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="22mm"
            android:layout_marginTop="1mm"
            android:text="参会者"
            android:textColor="@color/white"
            android:textSize="12mm"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_role" />

        <ImageView
            android:id="@+id/iv_speaker"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="6mm"
            android:background="@drawable/maininterface_tab_icon_speaker"
            app:layout_constraintLeft_toLeftOf="@+id/tv_name"
            app:layout_constraintRight_toRightOf="@+id/tv_name"
            app:layout_constraintTop_toBottomOf="@+id/tv_name" />

        <ImageView
            android:id="@+id/iv_camera"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8mm"
            android:background="@drawable/maininterface_tab_icon_camera"
            app:layout_constraintBottom_toBottomOf="@+id/iv_speaker"
            app:layout_constraintLeft_toRightOf="@+id/iv_speaker"
            app:layout_constraintTop_toTopOf="@+id/iv_speaker" />

        <ImageView
            android:id="@+id/iv_mic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8mm"
            android:background="@drawable/maininterface_tab_icon_microphone"
            app:layout_constraintBottom_toBottomOf="@+id/iv_speaker"
            app:layout_constraintLeft_toRightOf="@+id/iv_camera"
            app:layout_constraintTop_toTopOf="@+id/iv_speaker" />

        <ImageView
            android:id="@+id/iv_share"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8mm"
            android:background="@drawable/maininterface_tab_icon_share"
            app:layout_constraintBottom_toBottomOf="@+id/iv_speaker"
            app:layout_constraintLeft_toRightOf="@+id/iv_mic"
            app:layout_constraintTop_toTopOf="@+id/iv_speaker" />

        <ImageView
            android:id="@+id/iv_chat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8mm"
            android:visibility="gone"
            android:background="@drawable/maininterface_tab_icon_privztechat"
            app:layout_constraintBottom_toBottomOf="@+id/iv_speaker"
            app:layout_constraintLeft_toRightOf="@+id/iv_share"
            app:layout_constraintTop_toTopOf="@+id/iv_speaker" />
    </android.support.constraint.ConstraintLayout>

<!--        android:focusable="true"-->
    <ImageView
        android:id="@+id/iv_see"
        android:layout_width="39mm"
        android:layout_height="39mm"
        android:src="@drawable/bg_video_eye"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</FrameLayout>