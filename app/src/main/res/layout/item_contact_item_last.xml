<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/constaint_item_device"
    android:layout_width="match_parent"
    android:layout_height="40mm"
    android:background="@color/color_4d536d"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.constraint.ConstraintLayout
        android:id="@+id/constaint_item_root"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimens_40mm"
        android:focusable="true"
        android:background="@drawable/bg_selector_contact_item"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent">



    <ImageView
        android:id="@+id/iv_check_status"
        android:layout_width="15mm"
        android:layout_height="@dimen/dimens_15mm"
        android:src="@drawable/icon_item_square_state_unchecked"
        android:layout_marginLeft="@dimen/dimens_40mm"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        />


    <ImageView
        android:id="@+id/iv_icon"
        android:layout_width="18mm"
        android:layout_height="18mm"
        android:src="@drawable/icon_device_state_alive"
        android:layout_marginLeft="8mm"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@id/iv_check_status"/>

        <ImageView
            android:id="@+id/iv_tip_state"
            android:layout_width="7mm"
            android:layout_height="7mm"
            android:src="@drawable/icon_tip_online"
            app:layout_constraintBottom_toBottomOf="@id/iv_icon"
            app:layout_constraintRight_toRightOf="@id/iv_icon"
            />


    <TextView
        android:id="@+id/tv_title_device"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5mm"
        android:text="test"
        android:textColor="@color/white"
        android:textSize="10sp"
        android:singleLine="true"
        android:gravity="left"
        app:layout_constraintLeft_toRightOf="@id/iv_icon"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        />

    </android.support.constraint.ConstraintLayout>

    <View
        android:layout_width="0dp"
        android:layout_height="0.5mm"
        android:background="@color/color_717991"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        />


</android.support.constraint.ConstraintLayout>