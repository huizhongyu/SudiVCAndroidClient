<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cl_content"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <View
        android:id="@+id/divide_view"
        android:layout_width="0.5mm"
        android:layout_height="match_parent"
        android:background="@color/color_translate"
        android:layout_gravity="right"
        android:layout_marginRight="65.5mm"
        />

    <!--right menu-->
    <LinearLayout
        android:id="@+id/linearLayoutRight"
        android:layout_width="@dimen/dimens_66mm"
        android:layout_height="match_parent"
        android:layout_gravity="right"
        android:background="@color/color_600A0026"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent">

        <!--        <FrameLayout-->
        <!--            android:id="@+id/room_setting"-->
        <!--            android:layout_width="match_parent"-->
        <!--            android:layout_height="0dp"-->
        <!--            android:layout_weight="1"-->
        <!--            android:focusable="true">-->

        <TextView
            android:id="@+id/room_setting"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:background="@drawable/selector_bg"
            android:drawableTop="@drawable/maininterface_sidebaer_icon_setup"
            android:drawablePadding="-45mm"
            android:focusable="true"
            android:gravity="center"
            android:paddingTop="@dimen/dimens_40mm"
            android:text="设置"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="12sp" />
        <TextView
            android:id="@+id/splitScreen"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:background="@drawable/selector_bg"
            android:drawableTop="@drawable/maininterface_sidebaer_icon_layout"
            android:drawablePadding="-45mm"
            android:focusable="true"
            android:gravity="center"
            android:paddingTop="@dimen/dimens_40mm"
            android:text="布局"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="12sp" />

        <LinearLayout
            android:id="@+id/rl_info"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@drawable/selector_bg"
            android:focusable="true"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_avatar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/maininterface_menu_icon_nobody_small" />

            <TextView
                android:id="@+id/tv_host"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2mm"
                android:gravity="center"
                android:singleLine="true"
                android:text="我的"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="10sp" />
        </LinearLayout>

        <TextView
            android:id="@+id/join_num"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:background="@drawable/selector_bg"
            android:drawableRight="@drawable/one_down"
            android:focusable="true"
            android:gravity="center"
            android:text="10/10"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="11sp"
            android:visibility="gone" />


        <LinearLayout
            android:id="@+id/hangup"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@drawable/selector_bg"
            android:focusable="true"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/maininterface_menu_icon_rollname" />

            <TextView
                android:id="@+id/cost_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimens_5mm"
                tools:text="14:36:00"
                android:textSize="@dimen/dimens_11mm"
                android:textColor="@color/white" />

        </LinearLayout>

    </LinearLayout>
    <!--bottom menu-->
    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimens_70mm"
        android:layout_gravity="bottom"
        android:layout_marginRight="@dimen/dimens_66mm"
        android:background="@color/color_600A0026"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent">


        <TextView
            android:id="@+id/audio_speaker"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:background="@drawable/selector_bg"
            android:drawableTop="@drawable/maininterface_menu_icon_speaker"
            android:drawablePadding="-5mm"
            android:focusable="true"
            android:gravity="center"
            android:paddingTop="@dimen/dimens_5mm"
            android:text="@string/audio_speaker"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="10sp" />

        <TextView
            android:id="@+id/video_enable"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:background="@drawable/selector_bg"
            android:drawableTop="@drawable/maininterface_menu_icon_camera"
            android:drawablePadding="-5mm"
            android:focusable="true"
            android:gravity="center"
            android:paddingTop="@dimen/dimens_5mm"
            android:text="@string/video_enable"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="10sp" />


        <TextView
            android:id="@+id/audio_enable"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:background="@drawable/selector_bg"
            android:drawableTop="@drawable/meet_tab_menu_icon_mai"
            android:drawablePadding="-5mm"
            android:focusable="true"
            android:gravity="center"
            android:paddingTop="@dimen/dimens_5mm"
            android:text="@string/audio_enable"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="10sp" />


        <Button
            android:id="@+id/switch_camera"
            style="@style/Widget.AppCompat.Button.Colored"
            android:layout_width="80mm"
            android:layout_height="wrap_content"
            android:text="@string/switch_button"
            android:textAllCaps="false"
            android:textSize="10sp"
            android:visibility="gone" />


        <TextView
            android:id="@+id/raise_hand"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/selector_bg"
            android:drawableTop="@drawable/maininterface_menu_icon_speak"
            android:drawablePadding="-5mm"
            android:focusable="true"
            android:gravity="center"
            android:paddingTop="@dimen/dimens_5mm"
            android:text="申请发言"
            android:textColor="@color/white"
            android:textSize="10sp" />

        <TextView
            android:id="@+id/shareHDMI"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:background="@drawable/selector_bg"
            android:drawableTop="@drawable/bg_selector_share"
            android:drawablePadding="-5mm"
            android:focusable="true"
            android:gravity="center"
            android:paddingTop="@dimen/dimens_5mm"
            android:text="共享屏幕"

            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="10sp"
            android:visibility="visible" />

        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:visibility="gone">

            <TextView
                android:id="@+id/chat"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_marginLeft="500mm"
                android:drawableTop="@drawable/maininterface_menu_icon_privztechat"
                android:focusable="true"
                android:gravity="center"
                android:text="私聊"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="10sp"
                android:visibility="gone" />
        </FrameLayout>


        <TextView
            android:id="@+id/invitation"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:background="@drawable/selector_bg"
            android:drawableTop="@drawable/bg_selector_invitation"
            android:drawablePadding="-5mm"
            android:focusable="true"
            android:gravity="center"
            android:paddingTop="@dimen/dimens_5mm"
            android:text="邀请入会"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="10sp"
            android:visibility="visible" />

        <FrameLayout
            android:id="@+id/fl_roll_name"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <TextView
                android:drawablePadding="-5mm"
                android:paddingTop="@dimen/dimens_5mm"
                android:id="@+id/roll_name"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:background="@drawable/selector_bg"
                android:drawableTop="@drawable/bg_selector_roll"
                android:focusable="true"
                android:gravity="center"
                android:text="点名发言"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="10sp"
                android:visibility="visible" />

            <TextView
                android:id="@+id/tv_dot"
                android:layout_width="16mm"
                android:layout_height="16mm"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="15mm"
                android:layout_marginTop="3mm"
                android:background="@drawable/ic_mine_small_dot"
                android:gravity="center"
                android:includeFontPadding="false"
                android:textColor="@color/white"
                android:textSize="10sp"
                android:textStyle="bold"
                android:visibility="visible"
                app:layout_constraintRight_toRightOf="@id/roll_name"
                app:layout_constraintTop_toTopOf="@+id/roll_name" />

        </FrameLayout>

        <LinearLayout
            android:layout_width="170mm"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="vertical"
            android:gravity="right"
            android:paddingRight="15mm"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/tv_room_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="会议名称：2020年全年计划"
                android:singleLine="true"
                android:ellipsize="end"
                android:textColor="@color/white"
                android:textSize="10sp" />

            <TextView
                android:id="@+id/tv_room_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="会议ID：sudikejitech@16"
                android:textColor="@color/white"
                android:textSize="10sp"
                android:singleLine="true"
                android:ellipsize="end"/>

            <TextView
                android:gravity="center"
                android:background="@drawable/bg_item_selector_white_line"
                android:id="@+id/tv_room_person"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableTint="@color/white"
                android:drawableRight="@drawable/icon_arrow_up"
                android:drawablePadding="6mm"
                android:focusable="true"
                android:text="参会者：10 / 10"
                android:textColor="@color/white"
                android:textSize="10sp" />
        </LinearLayout>
    </LinearLayout>
</FrameLayout>