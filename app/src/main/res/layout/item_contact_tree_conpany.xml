<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    >

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <android.support.constraint.ConstraintLayout
        android:id="@+id/constaint_company_root"
        android:layout_width="0mm"
        android:layout_height="40mm"
        android:focusable="true"
        android:background="@drawable/bg_selector_contact_item"
        android:layout_marginRight="@dimen/dimens_55mm"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@id/divide">

        <ImageView
            android:id="@+id/iv_state_company"
            android:layout_width="15mm"
            android:layout_height="@dimen/dimens_15mm"
            android:src="@drawable/icon_item_square_state_unchecked"
            android:layout_marginLeft="@dimen/dimens_20mm"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            />

        <ImageView
            android:id="@+id/iv_icon_company"
            android:layout_width="15mm"
            android:layout_height="15mm"
            android:src="@drawable/icon_item_yiji"
            android:layout_marginLeft="45mm"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            />

        <TextView
            android:id="@+id/tv_title_company"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5mm"
            android:text="test"
            android:textColor="@color/white"
            android:textSize="10sp"
            app:layout_constraintLeft_toRightOf="@id/iv_icon_company"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"

            />


    </android.support.constraint.ConstraintLayout>

    <View
        android:id="@+id/focus_view"
        android:layout_width="30mm"
        android:layout_height="0mm"
        android:background="@drawable/bg_selector_contact_item"
        android:focusable="true"
        android:layout_marginTop="@dimen/dimens_5mm"
        android:layout_marginBottom="@dimen/dimens_5mm"
        android:layout_marginRight="@dimen/dimens_12mm"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        />


    <ImageView
        android:id="@+id/iv_arrow_company"
        android:layout_width="15mm"
        android:layout_height="15mm"
        android:src="@drawable/icon_arrow_0212_right"
        app:layout_constraintRight_toRightOf="@id/focus_view"
        app:layout_constraintTop_toTopOf="@id/focus_view"
        app:layout_constraintBottom_toBottomOf="@id/focus_view"
        app:layout_constraintLeft_toLeftOf="@id/focus_view"
        />

    <View
        android:id="@+id/divide"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_width="match_parent"
        android:layout_height="0.5mm"
        android:background="@color/color_717991"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        />

    </android.support.constraint.ConstraintLayout>

    <LinearLayout
        android:id="@+id/ll_company_contair"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"

        />

    </LinearLayout>
