<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    <style name="CloseliVideoCallTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>


    <style name="PopupWindowBottomAnimation" mce_bogus="1" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/trans_y_up</item>
        <item name="android:windowExitAnimation">@anim/trans_y_down</item>
    </style>

    <style name="PopupWindowDownAnimStyle">
        <item name="android:windowEnterAnimation">@anim/in_like_drop_down</item>
        <item name="android:windowExitAnimation">@anim/out_like_shrink_on</item>
    </style>

    <style name="PopupWindowLeftAnimStyle">
        <item name="android:windowEnterAnimation">@anim/out_like_drop_right</item>
        <item name="android:windowExitAnimation">@anim/in_like_left</item>
    </style>


    <style name="arr_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">14sp</item>
        <item name="android:focusable">true</item>
        <item name="android:focusableInTouchMode">true</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:textColor">@drawable/setting_button_style</item>
    </style>

    <style name="text_style">
        <item name="android:layout_width">100mm</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">14sp</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <!---->
    <style name="style_text_setting_title">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">11sp</item>
        <item name="android:textColor">@color/color_687df4</item>

    </style>

    <style name="style_radiobutton_setting_item">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">11sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@null</item>
        <item name="android:button">@null</item>
        <item name="android:drawableLeft">@drawable/bg_selector_setting_rb</item>
        <item name="android:drawablePadding">5mm</item>
    </style>

    <style name="style_checkbox_setting_item">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/sp_11</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@null</item>
        <item name="android:button">@null</item>
        <item name="android:drawableLeft">@drawable/bg_selector_setting_cb_status</item>
        <item name="android:drawablePadding">5mm</item>
    </style>

    <style name="style_text_popup_invite_item">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/sp_11</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="style_text_item_setting">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/dimens_40mm</item>
        <item name="android:textSize">@dimen/sp_11</item>
        <item name="android:textColor">@color/color_687df4</item>
        <item name="android:layout_marginLeft">@dimen/dimens_20mm</item>
        <item name="android:layout_marginRight">@dimen/dimens_20mm</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingLeft">@dimen/dimens_30mm</item>
        <item name="android:background">@color/color_2d2944</item>
    </style>
</resources>
